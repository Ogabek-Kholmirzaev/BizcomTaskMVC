@model List<BizcomTaskMVC.Entities.AppUserSubject>

@{
    ViewData["Title"] = "List of Subjects";
}

@if (@Model?.Count == 0)
{
    <p class="text-center">You don't have any subjects</p>
}
else
{
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <p class="text-center">Subjects</p>
            <table class="table text-center">
                <thead>
                    <tr class="text-center">
                        <th>Name</th>

                        @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Student))
                        {
                            <th>Grade</th>
                        }
                        <th>Details</th>
                        @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Teacher))
                        {
                            <th>Key</th>
                            <th>Actions</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                @item.Subject.Name
                            </td>

                            @if (@item.IsTeacher == false)
                            {
                                <td class="align-middle">
                                    @item.Grade
                                </td>
                            }
                            <td>
                                <a class="btn btn-outline-info" 
                                   asp-action="Details" 
                                   asp-route-subjectId="@item.SubjectId">
                                    <i class="bi bi-eye"></i>Details
                                </a>
                            </td>
                            @if (User.Identity.IsAuthenticated && User.IsInRole(UserRoles.Teacher))
                            {
                                <td>@item.Subject.Key</td>
                                <td class="align-middle">
                                    @if (item.IsAdmin)
                                    {
                                        <a class="btn btn-outline-primary" 
                                           asp-action="Edit" 
                                           asp-route-userSubjectId="@item.Id">
                                            <i class="bi bi-pencil-square"></i>Edit
                                        </a>
                                        <a class="btn btn-outline-danger"
                                           asp-action="Delete" 
                                           asp-route-subjectId="@item.SubjectId">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@if (User.Identity.IsAuthenticated)
{
    <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white mb-5">
        @if (User.IsInRole(UserRoles.Teacher))
        {
            <a asp-controller="Subjects" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add New
            </a>
        }
        <a asp-controller="Subjects" asp-action="Join" class="btn btn-info">
            <i class="bi bi-person-plus-fill"></i> Join Subject
        </a>
    </div>
}