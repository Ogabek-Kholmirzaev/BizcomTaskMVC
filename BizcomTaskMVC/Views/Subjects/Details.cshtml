@using System.Security.Claims
@model Subject

@{
    ViewData["Title"] = "Subject";
    var teachers = Model.AppUsers?.Where(u => u.IsTeacher).ToList();
    var students = Model.AppUsers?.Where(u => u.IsTeacher == false).ToList();
    var userSubject = @Model.AppUsers?
        .FirstOrDefault(u => u.AppUserId.ToString() == User.FindFirstValue(ClaimTypes.NameIdentifier));
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p class="text-center">Subject</p>
        <p>Name: @Model.Name</p>
        @if (User.IsInRole(UserRoles.Teacher))
        {
            <p>Key: @Model.Key</p>
        }
        @if (User.IsInRole(UserRoles.Student))
        {
            <p>
                Grade: @userSubject?.Grade
            </p>
        }
        
        <p class="text-center">Teachers </p>
        <table class="table text-center">
            <thead>
            <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Email</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in teachers ?? new List<AppUserSubject>())
            {
                <tr>
                    <td>@item.AppUser?.FirstName</td>
                    <td>@item.AppUser?.LastName</td>
                    <td>@item.AppUser?.Email</td>
                </tr>
            }
            </tbody>
        </table>
        
        @if (students?.Count == 0 && User.IsInRole(UserRoles.Teacher))
        {
            <p class="text-center">There are no students</p>
        }
        else if (User.IsInRole(UserRoles.Teacher))
        {
            <p class="text-center">Students</p>
            <table class="table text-center">
                <thead>
                <tr>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Email</th>
                    <th>Grade</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in students ?? new List<AppUserSubject>())
                {
                    <tr>
                        <td>@item.AppUser?.FirstName</td>
                        <td>@item.AppUser?.LastName</td>
                        <td>@item.AppUser?.Email</td>
                        <td>@item.Grade</td>
                        <td>
                            <a class="btn btn-info"
                                   asp-action="Mark" asp-route-studentId="@item.AppUserId" asp-route-userSubjectId="@item.Id">
                                <i class="bi bi-check-circle"></i> Mark
                            </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>